[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .tox,
    .eggs,
    *.egg
ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
per-file-ignores =
    __init__.py:F401
    settings.py:E501
